/* Ajouter un item dans le panier. */
POST /carts/123ab/items
=> {
    product: {
        href: 'https://products-api.dev/products/PRODUCT_ID'
    },
    count: 2
}
<= {
    id: '33333',
    href: 'https://cart-api.dev/items/33333',
    product: {
        id: 'PRODUCT_ID',
        href: 'https://products-api.dev/products/PRODUCT_ID'
    },
    count: 2
}

/* Mettre Ã  jour le nombre d'items. */
PATCH /items/33333
{
    count: 3,
    cart: {
        href: '...'
    }
}

/* Ajouter une tentative de paiment. */
POST /carts/123ab/payments
{
    cardNumber: '123...555'
}
<= {
    id: 'PAYMENT_1',
    href: '.../payments/PAYMENT_1'
    cardNumber: 'XXXXX555',
    status: 'pending'
}

/* Historique des tentatives de paiement. */
