// vehicleId can be a registration number
GET /vehicles/:vehicleId?fields=drivers
{
    id: 'VEHICLE_1',
    drivers: [
        ...
    ]
}

POST /vehicles/:vehicleId/incidents
=> {
    ...
}

<= {
    id: 'INCIDENT_1'
}

POST /incidents/INCIDENT_1/operations
=> {
    kind: 'lift',
    location: {...},
    liftAppointmentAt: '2019-10-01T...'
}

<= {
    id: 'OPERATION_1',
    kind: 'lift',
    createdAt: '...',
    ...
}

GET /incidents/INCIDENTS_1/operations?status=active&sort=-createdAt
{
    next: '.../incidents/INCIDENTS_1/operations?status=active&sort=-createdAt&offset=10',
    items: [

    ]
}



